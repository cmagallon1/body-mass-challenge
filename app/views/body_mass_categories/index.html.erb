<%= render 'users/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-12 text-center mt-5">
      
      <% if logged_in? %>
        <h1 class="display-4">BMI calculator</h1>
        <h2 class="mt-3">Please write your weight and height to calculate your BMI </h2>
        <div class="body_mass_form container">
          <%= form_with scope: :body_mass, url: body_mass_categories_url do |form| %>
            <div class="fields">
              <div>
                <%= label_tag(:height, "Height(cm):") %>
                <%= form.text_field :height, placeholder: "height", value: @height, class: "form-control" %>
              </div>
              <div>
                <%= label_tag(:weight, "weight(kg):") %>
                <%= form.text_field :weight, placeholder: "weight", value: @weight, class: "form-control"%>
              </div>
            </div>
            <div> 
              <%= form.submit :calculate, class: "btn btn-outline-info" %><br>
            </div>
          <% end %>
        </div> 
        <div id="bmi">
          <% render 'result' %>
        </div>
    </div> 
      <% else %>
  </div>
  <div class="row">
    <div class="col-12">
      <h1 class="display-4">You must be logged to use this app</h1>
    </div>
  </div>
  <% end %>
</div>
