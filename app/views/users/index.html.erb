  <%= render 'navbar' %>
<div class="container text-center mt-5">
  <h1 class="display-4">Body weight platform</h1>
  <div class="sign-in-up-form">
    <%= form_with scope: :user, url: "/signin", local: true do |form|%>
      <h2>sign in</h2>
      <div>
        <%= form.label :username %><br>
        <span><%= form.text_field :username, class: "form-control" %></span>
      </div>
      <div>
        <%= form.label :password %><br>
        <span><%= form.password_field :password, class: "form-control" %><span>
      </div>

      <%= form.submit :"sign in", class: "btn btn-outline-info" %><br>
    <% end %>
    <div class="pt-3">
      <label>you don't have an account?</label><br>
      <%= link_to "sign up here", new_user_path %>
    </div>
  </div>
</div>
  

